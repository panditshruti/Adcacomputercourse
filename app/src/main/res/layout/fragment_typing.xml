<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".ui.TypingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English Typing "
            android:layout_gravity="center"
            android:textColor="#C30101"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            />
        />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@drawable/et1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mouse Click"
            android:layout_gravity="center"
            android:textColor="#C30101"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@drawable/ms1"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@drawable/ms2"
            />




        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hindi Typing Code"
        android:layout_gravity="center"
            android:textColor="#C30101"
        android:textStyle="bold"
            android:layout_margin="10dp"
            android:padding="10dp"
        android:textSize="20dp"
        />
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:src="@drawable/ht1"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:src="@drawable/ht2"
        />

    </LinearLayout>
</ScrollView>